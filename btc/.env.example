# BTC Trading Agent v4.6 Enhanced Configuration
# 복사하여 .env 파일로 사용하고 실제 값으로 채워넣으세요

# ===== 기존 환경변수 =====
# Upbit API Keys
UPBIT_ACCESS_KEY=your_upbit_access_key_here
UPBIT_SECRET_KEY=your_upbit_secret_key_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Dry Run Mode (0=실제거래, 1=모의거래)
DRY_RUN=1

# ===== v4.6 신규 설정 변수 =====

# 분할 매수 설정
BTC_SPLIT_RATIOS=0.15,0.25,0.40
BTC_SPLIT_RSI=55,45,35

# 리스크 관리
BTC_INVEST_RATIO=0.30
BTC_STOP_LOSS=-0.03
BTC_TAKE_PROFIT=0.12
BTC_PARTIAL_TP_PCT=0.08
BTC_PARTIAL_TP_RATIO=0.50
BTC_TRAILING_STOP=0.02
BTC_TRAILING_ACTIVATE=0.015
BTC_TRAILING_ADAPTIVE=true
BTC_MAX_DAILY_LOSS=-0.08
BTC_MAX_DRAWDOWN=-0.15
BTC_MIN_CONFIDENCE=65
BTC_MAX_TRADES_PER_DAY=3

# 수수료
BTC_FEE_BUY=0.001
BTC_FEE_SELL=0.001

# 매매 신호 임계값
BTC_BUY_COMPOSITE_MIN=45
BTC_SELL_COMPOSITE_MAX=20

# 시간 관리
BTC_TIMECUT_DAYS=7
BTC_COOLDOWN_MINUTES=30

# 필터 설정
BTC_VOLATILITY_FILTER=true
BTC_FUNDING_FILTER=true
BTC_OI_FILTER=true
BTC_KIMCHI_PREMIUM_MAX=5.0
BTC_DYNAMIC_WEIGHTS=true

# 로깅 설정
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true